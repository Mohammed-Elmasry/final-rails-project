<h1>Search Result </h1>
<p> <%= link_to 'Back' , new_search_path %> </p>
    <% if @search.products.empty? %>
        <p> No Products Found </p>
    <% else %>
        <% @search.products.each do |c| %>
            <br>
            <div class= "div">
                <h1><%= c.title %> </h1>
                <p> Price: $<%= c.price%> </p>
                <p> Category: <%= c.category.name%> </p>
                <p> Brand: <%= c.brand.name%> </p>
                <p> Description: <%= c.description%> </p>
                <p>Store: <%= c.stores.name%> </p>
            </div>
        <% end %>
    <% end %>