<p id="notice"><%= notice %></p>

<h1>Brands</h1>

<table class="table">
  <thead class="thead-dark">
    <tr>
      <th scope="col">Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @brands.each do |brand| %>
      <tr>
        <td scope="row"><%= brand.name %></td>
        <td scope="row"><%= link_to 'Show', brand %></td>
        <td scope="row"><%= link_to 'Edit', edit_brand_path(brand) %></td>
        <td scope="row"><%= link_to 'Destroy', brand, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Brand', new_brand_path %>
